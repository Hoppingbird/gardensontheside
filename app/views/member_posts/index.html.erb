<div class="container">

  <div class="row">
    <div class="box">
        <div class="col-lg-12">
          <hr>
                <h2 class="intro-text text-center">
                  <strong>Our Community</strong>
                  <p>Things people are saying and doing</p>
                </h2>

                <hr>
                <% @member_posts.each do |member_post| %>
                    <div align="center">
                      <%= member_post.title %>
                    </div>
                    <br />
                    <div align="center" >
                    <%= image_tag member_post.image.url(:medium) %>
                    </div>
                    <br />
                    <div align="center">
                      <% user = User.find(member_post.user_id) %>
                    <p>Posted By: <%= user.name %> | Comment: <%= member_post.body %></p>
                    </div>
                    <div class="text-center edit-links">
                     <% if current_user.id == member_post.user_id || current_user.admin? %>
                      <%= link_to "Edit Post", edit_member_post_path(member_post.id) %>
                      |
                      <%= link_to "Delete Post", member_post_path(member_post.id), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
                     <% end %>

                    </div>
                <% end %>

          <div class="clearfix"></div>

          <%= render 'application/bottom_nav' %>

        </div>
    </div>
  </div>

</div>
<!-- /.container -->