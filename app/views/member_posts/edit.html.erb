
  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">
          <strong>Edit community blog entry</strong>
        </h2>

        <hr>

        <div class="text-center">
          <%= image_tag @member_post.image.url(:medium) %>
        </div>
        <div class="form-wrapper">
          <%= simple_form_for @member_post, html: { class: 'form-horizontal', multipart: true } do |f| %>
              <%= f.error_notification %>
              <div class="form-group">
                  <div class="form-inputs center">
                    <%= f.input :image, placeholder: 'Upload an image',required: true %>
                  </div>
                  <div class="form-group text-center">
                    <%= f.input_field :title, placeholder: 'Title', required: true, autofocus: true %>
                  </div>
                  <br />
                  <div class="form-group text-center">
                    <%= f.input_field :body, placeholder: 'Caption/Message', required: true %>
                  </div>
                  <br />
                  <div class="form-actions text-center">
                    <%= f.button :submit, "Submit" %>
                  </div>
                  <div class="text-center edit-links">
                    <%= link_to "Delete Post", member_post_path(@member_post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
                    |
                    <%= link_to "Cancel", member_posts_path %>
                  </div>
              </div>
          <% end %>
        </div>

        <div class="clearfix"></div>

        <%= render 'application/bottom_nav' %>
      </div>
    </div>
  </div>

</div>
<!-- /.container -->
