

<div class="container">

  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">Tools from
          <strong>Gardens on the Side</strong>
        </h2>
        <hr>
      </div>
      <div class="col-md-6">
        <img class="img-responsive img-border-left" src="/assets/usda-zone-map.gif" alt="">
      </div>
      <div class="col-md-6">
        <p>Use the form below to look up your grow zone based on your zip code</p>
        <%= form_tag('/tools/index', method: 'get') do %>
            <%= label_tag(:zip, 'Search for:') %>
            <%= text_field_tag(:zip) %>
            <%= submit_tag('Search') %>
        <% end %>
        <div class="clearfix"></div>
        <%= @zip %>
      </div>

      <div class="clearfix"></div>

      </div>
    </div>
  </div>

  <div class="row">
    <div class="box">

    </div>
  </div>

</div>
<!-- /.container -->

