  <![endif]-->

</head>

<body>

<div class="brand">Gardens on the Side</div>
<div class="address-bar">883 Lake Dr | Snellville, GA | 678.522.6452</div>

<!-- Navigation -->
<nav class="navbar navbar-default" role="navigation">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <!-- navbar-brand is hidden on larger screens, but visible when the menu is collapsed -->
      <a class="navbar-brand" href="/welcome/index.html">Gardens on the Side</a>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li>
          <a href="/welcome/index.html">Home</a>
        </li>
        <li>
          <a href="/about/index.html">About</a>
        </li>
        <li>
          <a href="/blog/index.html">Blog</a>
        </li>
        <li>
          <a href="/contacts/new.html">Contact</a>
        </li>
        <li>
          <a href="/members/index.html">Members</a>
        </li>
        <li>
          <a href="/tools/index.html">Tools</a>
        </li>
      </ul>
      <div class="pull-right user-info">
        <% if current_user %>
            Hello <%= current_user.name %>! <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
        <% else %>
            <%= link_to "Sign In", new_user_session_path %> or
            <%= link_to "Sign Up", new_user_registration_path %>
        <% end %>
      </div>
    </div>
    <!-- /.navbar-collapse -->
  </div>
  <!-- /.container -->
</nav>

<div class="container">

  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">Contact
          <strong>Gardens on the Side</strong>
        </h2>
        <hr>
      </div>
      <div class="col-md-8">
        <!-- Embedded Google Map using an iframe - to select your location find it on Google maps and paste the link as the iframe src. If you want to use the Google Maps API instead then have at it! -->
        <iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com/maps?hl=en&amp;ie=UTF8&amp;ll=37.0625,-95.677068&amp;spn=56.506174,79.013672&amp;t=m&amp;z=4&amp;output=embed"></iframe>
      </div>
      <div class="col-md-4">
        <p>Phone:
          <strong>678.522.6452</strong>
        </p>
        <p>Email:
          <strong><a href="mailto:hoppingbird@gmail.com">hoppingbird@gmail.com</a></strong>
        </p>
        <p>Address:
          <strong>883 Lake Dr
            <br>Snellville, Ga</strong>
        </p>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>

  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">Contact
          <strong>form</strong>
        </h2>
        <hr>
        <p> Please fill out the form and let us know how we can help. We will get back to you ASAP.</p>

        <%= simple_form_for @contact do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :contact_name, required: true, autofocus: true %>
              <%= f.input :contact_email, required: true %>
              <%= f.input :contact_phone, required: false %>
              <%= f.input :contact_message, hint: "Tell us a little about what you are looking for", required: true %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Submit" %>
            </div>
        <% end %>

      </div>
    </div>
  </div>

</div>
<!-- /.container -->

<footer>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <p>Copyright &copy; Gardensontheside.com 2015</p>
      </div>
    </div>
  </div>
</footer>

<!-- jQuery -->
<script src="js/jquery.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="js/bootstrap.min.js"></script>

</body>

</html>
