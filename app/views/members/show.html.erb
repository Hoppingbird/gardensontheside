

<div class="container">


  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">
          <strong>Members</strong>
        </h2>
        <hr>
        <div class="row">
          <div class="box">
            <div class="col-lg-12">
              <h2 class="intro-text text-center">
                <div>
                  <% if current_user.admin? %>
                      <%= form_for @user do |f| %>
                          <div class='form-group'>
                            <%= radio_button_tag(:role, 'standard') %>
                            <%= label_tag(:role, 'standard') %> <br/>
                            <%= radio_button_tag(:role, 'premium') %>
                            <%= label_tag(:role, 'premium') %> <br/>
                            <%= radio_button_tag(:role, 'admin') %>
                            <%= label_tag(:role, 'admin') %>
                          </div>
                          <div class='form-group'>
                            <%= f.submit "Save", class: 'btn btn-success' %>
                          </div>
                      <% end %>
                  <% end%>
                </div>

              </h2>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
                <li>
                  <%= link_to "Member's Blog", member_posts_path %>
                </li>
                <li>
                  <%= link_to "Show us your Garden", new_member_post_path %>
                </li>
                <li>
                  <%= link_to "Tool", tools_index_path %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
<!-- /.container -->

